{
  "name": "bravado-server",
  "version": "0.18.0",
  "description": "Server for the Bravado REST API framework",
  "directories": {
    "lib": "lib"
  },
  "scripts": {
    "reinstall": "rm -rf node_modules && yarn install",
    "lint": "esw . --ext .js",
    "lint:fix": "yarn lint --fix",
    "lint:watch": "yarn lint --watch",
    "lint:changed": "lint-staged",
    "test": "mocha test/index-spec.js --timeout 15000"
  },
  "engines": {
    "node": ">=12.13.0"
  },
  "main": "lib/index.js",
  "author": "Losant <hello@losant.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Losant/bravado-server/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Losant/bravado-server.git"
  },
  "keywords": [
    "rest",
    "restful",
    "server",
    "api",
    "bravado"
  ],
  "lint-staged": {
    "*.js": "esw"
  },
  "dependencies": {
    "bravado-core": "^0.13.6",
    "bunyan": "^1.8.15",
    "commander": "^9.4.1",
    "convict": "^6.2.3",
    "debug": "^4.3.4",
    "dotenv": "^16.0.3",
    "omnibelt": "^2.1.0",
    "restify": "^10.0.0"
  },
  "devDependencies": {
    "@losant/eslint-config-losant": "^1.5.0",
    "bravado-client-generator": "Losant/bravado-client-generator#master",
    "es6-promise": "^4.2.8",
    "eventsource": "^2.0.2",
    "fs-extra": "^11.1.0",
    "husky": "^8.0.2",
    "lint-staged": "^13.1.0",
    "mocha": "^10.1.0",
    "nock": "^13.2.9",
    "should": "^13.2.3"
  },
  "eslintConfig": {
    "extends": "@losant/eslint-config-losant/env/node"
  },
  "eslintIgnore": [
    "test/testClient"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
