#!/usr/bin/env node
var program = require('commander');
var server = require('../lib/index');

program
  .usage('<api>')
  .option('-h, --host <host>', 'Host for server to listen on', '')
  .option('-p, --port <port>', 'Port for server to listen on', 8081)
  .action(function (api, program) {
    server.start(api, {
      host: program.host,
      port: program.port
    });
  })
  .parse(process.argv);
